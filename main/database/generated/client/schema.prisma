// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
    output   = "../main/database/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model user_accounts {
  id                 Int     @id @default(autoincrement())
  email              String
  username           String  @unique
  password           String
  account_type       String?
  incoming_server    String?
  outgoing_server    String?
  emails             email[] // One-to-many relation with email table
}

// Define the email table
model email {
  id            Int          @id @default(autoincrement())
  sender        user_accounts @relation(fields: [sender_id], references: [id])
  sender_id     Int
  recipient     String
  subject       String
  body          String
  timestamp     DateTime
  is_read       Boolean
  attachments   attachments[] // One-to-many relation with attachments table
}

// Define the attachments table
model attachments {
  id            Int          @id @default(autoincrement())
  email_id      Int
  email         email        @relation(fields: [email_id], references: [id])
  file_name     String
  file_type     String
  file_size     String
  file_contents Bytes
}